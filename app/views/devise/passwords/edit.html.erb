<% content_for(:title, "Change Password") %>

<div class="auth-container">
  <div class="auth-card">
    <h1 class="auth-title">New Password</h1>
    <p class="auth-subtitle">Enter your new password below</p>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "New Password", class: "form-label" %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-input", placeholder: "Min 6 characters" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
      </div>

      <div style="margin-top:var(--space-xl);">
        <%= f.submit "Change Password", class: "btn btn-primary btn-lg", style: "width:100%;" %>
      </div>
    <% end %>
  </div>
</div>
