<% if resource.errors.any? %>
  <div style="background:rgba(231,76,60,0.1);border:1px solid rgba(231,76,60,0.3);border-radius:var(--radius-md);padding:var(--space-md);margin-bottom:var(--space-lg);">
    <% resource.errors.full_messages.each do |msg| %>
      <p style="color:var(--color-highlight);font-size:0.85rem;"><%= msg %></p>
    <% end %>
  </div>
<% end %>
