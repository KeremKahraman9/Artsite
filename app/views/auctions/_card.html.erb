<%= link_to auction_path(auction), class: "card", style: "text-decoration:none;" do %>
  <div class="card-image" style="aspect-ratio:16/10;">
    <% if auction.artwork.image.attached? %>
      <%= image_tag auction.artwork.image.variant(resize_to_fill: [640, 400]), alt: auction.artwork.title %>
    <% else %>
      <div style="width:100%;height:100%;background:linear-gradient(<%= rand(0..360) %>deg, #2a2a3e, #1a1a2e);display:flex;align-items:center;justify-content:center;">
        <span style="font-family:var(--font-display);font-size:3rem;opacity:0.2;color:var(--color-accent);"><%= auction.artwork.title.first(2).upcase %></span>
      </div>
    <% end %>
    <% if auction.live? %>
      <span class="card-badge card-badge-live">Live</span>
    <% elsif auction.ended? %>
      <span class="card-badge">Ended</span>
    <% end %>
  </div>
  <div class="card-body">
    <h3 class="card-title"><%= auction.artwork.title %></h3>
    <p class="card-subtitle">by <%= auction.artwork.artist.display_name %> &middot; <%= auction.bids_count %> bids</p>
    <div class="card-meta">
      <span class="card-price"><%= number_to_currency(auction.current_price) %></span>
      <span class="card-time"><%= time_remaining_display(auction) %></span>
    </div>
  </div>
<% end %>
